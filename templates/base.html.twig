<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
		
		<link  rel="stylesheet" href="/css/dataTables.css" />
		<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" ></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
		<script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
		<style>
		#users_length{display:none;}
		.table.dataTable {width: 100% !important;}
		.dataTables_scrollHeadInner {width: 100% !important;}
		</style>
    </head>
    <body>
        {% block body %}
<div class="col-lg-12">

		<a href="/add" class="btn btn-dark">Add New User</a>

			 <table id="users" class="table table-hover">
				  <thead>
					<tr>
					  <th>Name</th>
					  <th>Surname</th>
					  <th>Telephone Number</th>
					  <th>Address</th>
					  <th>Show</th>
					  <th>Update</th>
					  <th>Delete</th>
					</tr>
				  </thead>
				  <tbody>
					{% for user in users %}
					  <tr>
						<td>{{ user.imie }}</td>
						<td>{{ user.nazwisko }}</td>
						<td>{{ user.telefon }}</td>
						<td>{{ user.address }}</td>
						<td>
						  <a href="/show/{{user.id}}" class="btn btn-dark show-article">Show</a>
						</td>
						<td>
						<a href="/edit/{{user.id}}" class="btn btn-dark update-article" data-id="{{ user.id }}">Update</a>
						</td>
						<td>
						<a href="#" class="btn btn-dark delete-article" data-id="{{ user.id }}">Delete</a>
						</td>
					  </tr>
					{% endfor %}
				  </tbody>
				</table>
	</div>
		{% endblock %}
		<script>

$(document).ready(function() {
	var table = $('#users').DataTable(
		{
			"info":     false,
			"scrollY":     500,
			"pageLength": 10,
			"language": {
            "zeroRecords": "No records",
            "infoEmpty": "No data",
						"paginate": {
			        "next":       "NastÄ™pna",
			        "previous":   "Poprzednia"
    				}
			}
		}
	);
} );
</script>
        {% block javascripts %}
		  <script src="/js/main.js"></script>
		{% endblock %}
    </body>
</html>
